20\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"2\" stroke-linecap=\"round\" stroke-linejoin=\"round\"><path d=\"M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24\"></path><line x1=\"1\" y1=\"1\" x2=\"23\" y2=\"23\"></line></svg>\r\n              <svg v-else xmlns=\"http://www.w3.org/2000/svg\" width=\"20\" height=\"20\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"2\" stroke-linecap=\"round\" stroke-linejoin=\"round\"><path d=\"M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z\"></path><circle cx=\"12\" cy=\"12\" r=\"3\"></circle></svg>\r\n            </button>\r\n          </div>\r\n          <span v-if=\"errors.password\" class=\"error-text\">{{ errors.password }}</span>\r\n        </div>\r\n        \r\n        <div class=\"form-options\">\r\n          <label class=\"checkbox-container\">\r\n            <input type=\"checkbox\" v-model=\"form.remember\">\r\n            <span class=\"checkmark\"></span>\r\n            <span>记住我</span>\r\n          </label>\r\n          <a href=\"#\" class=\"forgot-password\">忘记密码?</a>\r\n        </div>\r\n        \r\n        <div class=\"form-submit\">\r\n          <button \r\n            type=\"button\" \r\n            class=\"login-btn\" \r\n            :disabled=\"loading\"\r\n            @click=\"login\"\r\n          >\r\n            <span v-if=\"loading\" class=\"spinner-small\"></span>\r\n            <span v-else>登录</span>\r\n          </button>\r\n        </div>\r\n        \r\n        <div v-if=\"loginError\" class=\"login-error\">\r\n          {{ loginError }}\r\n        </div>\r\n      </div>\r\n      \r\n      <div class=\"login-footer\">\r\n        <p>没有账号? <a href=\"#\">联系管理员</a></p>\r\n      </div>\r\n    </div>\r\n    \r\n    <div class=\"login-backdrop\">\r\n      <div class=\"backdrop-image\"></div>\r\n      <div class=\"backdrop-overlay\"></div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'Login',\r\n  data() {\r\n    return {\r\n      form: {\r\n        username: '',\r\n        password: '',\r\n        remember: false\r\n      },\r\n      errors: {\r\n        username: '',\r\n        password: ''\r\n      },\r\n      showPassword: false,\r\n      loading: false,\r\n      loginError: ''\r\n    }\r\n  },\r\n  methods: {\r\n    validateUsername() {\r\n      if (!this.form.username.trim()) {\r\n        this.errors.username = '请输入用户名'\r\n      } else {\r\n        this.errors.username = ''\r\n      }\r\n    },\r\n    validatePassword() {\r\n      if (!this.form.password) {\r\n        this.errors.password = '请输入密码'\r\n      } else if (this.form.password.length < 6) {\r\n        this.errors.password = '密码至少需要6个字符'\r\n      } else {\r\n        this.errors.password = ''\r\n      }\r\n    },\r\n    validate() {\r\n      this.validateUsername()\r\n      this.validatePassword()\r\n      return !this.errors.username && !this.errors.password\r\n    },\r\n    async login() {\r\n      if (!this.validate()) {\r\n        return\r\n      }\r\n      \r\n      this.loading = true\r\n      this.loginError = ''\r\n      \r\n      try {\r\n        // 这里应该是实际的登录API调用\r\n        // const response = await axios.post('/api/login', this.form)\r\n        \r\n        // 模拟API调用\r\n        await new Promise(resolve => setTimeout(resolve, 1000))\r\n        \r\n        // 模拟成功登录\r\n        localStorage.setItem('isAuthenticated', 'true')\r\n        \r\n        // 检查是否有重定向路径\r\n        const redirectPath = this.$route.query.redirect || '/'\r\n        this.$router.push(redirectPath)\r\n      } catch (error) {\r\n        console.error('登录失败:', error)\r\n        this.loginError = '用户名或密码错误，请重试'\r\n      } finally {\r\n        this.loading = false\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.login-container {\r\n  min-height: 100vh;\r\n  display: flex;\r\n  pos